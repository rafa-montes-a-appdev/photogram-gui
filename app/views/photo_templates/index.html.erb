<h1>List of photos</h1>

<form action = "/insert_photo">
  
  <label for = "image_box">Image</label>
  <input id = "image_box" name = "query_image" placeholder = "Enter a URL for the image...">

  <label for = "caption_box">Caption</label>
  <textarea id ="caption_box" name = "query_caption" placeholder = "Enter a caption for the photo..."></textarea>

  <label for = "owner_id_box">Owner ID</label>
  <input id = "owner_id_box" name = "query_owner_id" placeholder = "Enter an ID of a User">

  <button>Add photo</button>

</form>

<hr>

<table = border = "1">

  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

<% @list_of_images.each do |item| %>
  <tr>
    <td><img src = "<%= item.image %>"></img></td>
    <td><%= item.caption %></td>
    <td><%= item.poster.username %></td>
    <td><%= item.created_at %></td>
    <td><a href = "/photos/<%=item.id%>">Show details</a></td>
  </tr>
<% end %>
</table>
