<h1>List of photos</h1>

<form>
  
  <label for = "url">Image</label>
  <input id = "url" name = "img_url" placeholder = "Enter a URL for the image...">

  <label for = "caption">Caption</label>
  <textarea id "caption" name = "img_caption" placeholder = "Enter a caption for the photo..."></textarea>

  <label for = "owner">Owner ID</label>
  <input id = "owner" name = "img_owner" placeholder = "Enter an ID of a User">

  <button>Add photo</button>

</form>

<hr>

<table = border = "1">

  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

<% @list_of_images.each do |item| %>
  <tr>
    <td><img src = "<%= item.image %>"></img></td>
    <td><%= item.caption %></td>
    <td><%= item.poster.username %></td>
    <td><%= item.created_at %></td>
    <td><a href = "/photos/<%=item.id%>">Show details</a></td>
  </tr>
<% end %>
</table>
