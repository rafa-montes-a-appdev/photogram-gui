<h1>Photo details</h1>

<dl>

  <dt>Image</dt>
    <dd><img src = "<%=@the_image.image%>"></img></dd>

  <dt>Caption</dt>
    <dd><%=@the_image.caption%></dd>

  <dt>Owner</dt>
    <dd><%=@the_image.poster.username%></dd>

  <dt>Posted</dt>
    <dd><%=@the_image.created_at%></dd>

  <dt>Edit photo</dt>
    <dd>
    
      <form action = "/edit_photo/<%=@the_image.id%>">
        <label for = "edit_url_box">Image</label>
        <input id = "edit_url_box" name = "query_edit_url" value = "<%=@the_image.image%>">

        <label for = "edit_caption_box">Caption</label>
        <textarea id = "edit_caption_box" name = "query_edit_caption"><%=@the_image.caption%></textarea>

        <button>Update photo</button>
      </form>

    </dd>
  
  <dt>Delete photo</dt>
    <dd><a href = "/delete_photo/<%=@the_image.id%>">Delete photo</a></dd>

</dl>

<h1>Comments</h1>

<table>

<tr>
  <th>Commenter</th>
  <th>Comment</th>
  <th>Posted</th>
</tr>

<% @the_image.comments.each do |item| %>
<tr>
  <td><%= item.commenter.username%></td>
  <td><%= item.body%></td>
  <td><%= item.created_at%></td>
</tr>
<% end %>
</table>

<h1>Add a new comment</h1>

<form action = "/insert_comment">

  <label for = "img_id_add">Photo ID</label>
  <input id = "img_id_add" name = "query_photoid_comment" value = "<%=@the_image.id%>">

  <label for = "author_add">Author ID</label>
  <input id = "author_add" name = "query_authorid_comment">

  <label for = "new_comment">Comment</label>
  <textarea id = "new_comment" name = "query_new_comment">Enter a new comment...</textarea>

  <button>Add comment</button>

</form>
